<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/background"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Handshake"
        android:background="#FFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF5722" />

    <Button
        android:id="@+id/buttonCriarEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="#2196F3"
        android:padding="10dp"
        android:text="Criar Eventos"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonProcurarEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#2196F3"
        android:padding="10dp"
        android:text="Procurar Eventos"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#2196F3"
        android:padding="10dp"
        android:text="Editar Perfil"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonProcurarArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#2196F3"
        android:padding="10dp"
        android:text="Procurar Artistas"
        android:textColor="#FFFFFF" />

</LinearLayout>